<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_activity"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/doc_body_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/doc_grig_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <ImageView
                android:id="@+id/grid_item_image_details"
                android:layout_width="match_parent"
                android:layout_height="645dp"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/grid_item_title_detils"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:padding="10dp"
                android:textSize="30sp"
                android:gravity="center_vertical|center_horizontal"/>

        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <Button
                android:id="@+id/make_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_button_center"
                android:drawableTop="@drawable/ic_add_photo"
                android:text="@string/make_photo"
                android:textColor='@color/colorWhile'
                android:textSize="@dimen/activity_margin_middle"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <Button
                android:id="@+id/ret_doc_detail_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_button_return"
                android:drawableTint="@color/colorWhile"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/save_document_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_button_right_botton"
                android:drawableTop="@drawable/ic_save"
                android:text="@string/action_save"
                android:textColor='@color/colorWhile'
                android:textSize="@dimen/activity_margin_middle"
                android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>